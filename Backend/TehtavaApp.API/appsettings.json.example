{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DATABASE;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "MongoDB": "mongodb://localhost:27017"
  },
  "MongoDb": {
    "ConnectionString": "YOUR_MONGODB_CONNECTION_STRING",
    "DatabaseName": "YOUR_DATABASE_NAME"
  },
  "JwtSettings": {
    "Key": "your-super-secret-key-with-at-least-32-characters-CHANGE-THIS",
    "Issuer": "https://localhost:5000",
    "Audience": "https://localhost:5173",
    "ExpiryInDays": 7
  },
  "AdminUser": {
    "Email": "admin@yourdomain.com",
    "Password": "CHANGE_THIS_PASSWORD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "http://localhost:5000",
      "http://localhost:5001",
      "http://localhost:8080",
      "http://localhost"
    ]
  },
  "FileStorage": {
    "BasePath": "wwwroot/uploads",
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".ppt",
      ".pptx",
      ".txt",
      ".jpg",
      ".jpeg",
      ".png"
    ],
    "MaxFileSizeBytes": 10485760
  },
  "Notifications": {
    "Email": {
      "Enabled": true,
      "FromEmail": "noreply@yourdomain.com",
      "FromName": "YourAppName"
    },
    "Push": {
      "Enabled": false,
      "VapidPublicKey": "",
      "VapidPrivateKey": ""
    }
  },
  "AIGrading": {
    "Enabled": false,
    "Provider": "OpenAI",
    "Mode": "Assisted",
    "MarkAsAIGenerated": true,
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "Model": "gpt-4o",
      "MaxTokens": 2000
    },
    "AzureOpenAI": {
      "Endpoint": "https://YOUR_RESOURCE.openai.azure.com",
      "ApiKey": "YOUR_AZURE_OPENAI_API_KEY",
      "DeploymentName": "YOUR_DEPLOYMENT_NAME",
      "ApiVersion": "2024-02-15-preview"
    }
  },
  "AzureBlobStorage": {
    "ConnectionString": "YOUR_AZURE_STORAGE_CONNECTION_STRING",
    "ContainerName": "YOUR_CONTAINER_NAME"
  }
}

